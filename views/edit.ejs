<% include ./partial/header.ejs %>


<div class="ui main text container segment">
	<div class= "ui huge header">
		Edit <%= blog.title %>
	</div>
	<p>
		
	</p>
	
	<form class= "ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Movie Name</label>
		<input type="text" name="blog[title]" value= "<%= blog.title %>" >
		</div>
		<div class="field">
			<label>Movie Poster</label>
		<input type="text" name="blog[image]" value= "<%=blog.image %>">
		</div>
		<div class="field">
			<label>Movie Description</label>
			<textarea name="blog[body]"> <%= blog.body %> </textarea>
		</div>
		<input  class = "ui green basic button" type="submit">
	</form>																				  
</div>


